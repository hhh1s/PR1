<Window x:Class="PR_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Background="BlueViolet">

        <TextBlock Text="Введите почту:" FontSize="20" Canvas.Left="236" Canvas.Top="114"/>
        <TextBox Name="Adress" HorizontalAlignment="Left" VerticalAlignment="Top" Width="328" Canvas.Left="236" Canvas.Top="147"/>

        <TextBlock Text="Введите пароль:" FontSize="20" Canvas.Left="236" Canvas.Top="167" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Width="328" Canvas.Left="236" Canvas.Top="199"/>
        
        <Button Name="SignUp" Content="Войти" Canvas.Left="357" Canvas.Top="237" FontSize="30" Background="PeachPuff" Click="SignUp_Click"/>
        
        <Button Name="SignIN" Content="Зарегестрироваться" Canvas.Left="260" Canvas.Top="306" FontSize="30" Background="PeachPuff" Click="SignIN_Click"/>
        
        <Button Name="Forget" Content="Забыли пароль" Canvas.Left="328" Canvas.Top="375" FontSize="20" Background="BlueViolet" Click="Forget_Click"/>
    </Canvas>
</Window>
